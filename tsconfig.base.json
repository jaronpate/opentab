{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "types": ["node"],

        "moduleResolution": "node",
        "esModuleInterop": true,

        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "downlevelIteration": true,
    }
}